<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".databasefragment.home"
    android:background="#FFFBF0">


    <ImageView
        android:scaleX="@integer/material_motion_duration_long_2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:src="@drawable/header" />

    <TextView
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="3dp"
        android:text="Reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <DatePicker
        android:background="#FFFFFF"
        android:headerBackground="#362229"
        android:id="@+id/calendar"
        android:layout_width="292dp"
        android:layout_height="371dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="430dp"
        android:text="Schedule Today"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="#FFCC3F"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <ListView
        android:layout_marginTop="470dp"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="90dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#FFF6DE"/>

    <TextView
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="550dp"
        android:text="Schedule Tomorrow"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="#FFCC3F"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <ListView
        android:layout_marginTop="590dp"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="90dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#FFF6DE"/>


</FrameLayout>