<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context=".ui.capture.CaptureFragment">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="32dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="100dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="title" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:paddingHorizontal="24dp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="156dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="catatan"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/file"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_attach_file_24" />

            <Button
                android:id="@+id/voice"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_keyboard_voice_24" />

        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="546dp">

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Folder" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:text="/"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Sub Folder" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:hint="DateLine Or Reminder Time (Optional)"
        android:inputType="date"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="591dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/Primary"
        android:clickable="true"
        app:srcCompat="@drawable/baseline_save_24"
        tools:layout_editor_absoluteX="331dp"
        tools:layout_editor_absoluteY="648dp" />

</androidx.constraintlayout.widget.ConstraintLayout>